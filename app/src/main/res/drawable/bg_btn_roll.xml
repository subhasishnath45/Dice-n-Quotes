<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#2e7d32"></solid>
            <stroke android:width="2dp" android:color="#2e7d32"></stroke>
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="2dp" android:color="#81c784"></stroke>
            <solid android:color="@android:color/transparent"></solid>
        </shape>
    </item>
</selector>