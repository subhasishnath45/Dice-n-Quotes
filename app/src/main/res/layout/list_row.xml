<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_margin="@dimen/cardview_compat_inset_shadow"
        android:layout_marginLeft="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/movieImageID"
                android:background="@color/cardview_dark_background"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quote Title"
                android:id="@+id/movieTitleID"
                android:layout_toRightOf="@id/movieImageID"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="false"/>

            <TextView
                android:id="@+id/movieReleaseID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/movieImageID"
                android:layout_toRightOf="@+id/movieImageID"
                android:padding="5dp"
                android:text="Tap to know more..." />

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/movieCatID"-->
                <!--android:padding="5dp"-->
                <!--android:layout_below="@id/movieReleaseID"-->
                <!--android:layout_toRightOf="@id/movieImageID"-->
                <!--android:text="category"/>-->

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>