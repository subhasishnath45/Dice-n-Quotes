<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/headerlayout_bg"
    android:layout_height="190dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="15dp">
        <android.support.v7.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            card_view:cardElevation="0dp"
            android:id="@+id/cardviewWrapper"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="50dp"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/imageViewDev"
                android:src="@drawable/ic_splashlogo">
            </ImageView>
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/Titledev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:fontFamily="sans-serif-bold"
            android:text="About the maker"
            />
        <TextView
            android:id="@+id/txtHoldrName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:fontFamily="sans-serif-light"
            android:text="Subhasish Nath"
            />
        <TextView
            android:id="@+id/txtHoldremail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textColor="#dddddd"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"
            android:text="subhasishnath45@gmail.com"
            />

    </LinearLayout>

</RelativeLayout>